{
  "name": "portfolio",
  "version": "0.1.0",
  "author": "Aidan Lowson <dev@aidanlowson.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AidanLDev/Portfolio.git"
  },
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "eslint .",
    "start": "npx serve@latest out",
    "deploy": "npx sst deploy --stage production",
    "refresh": "npx sst refresh --stage production",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postbuild": "next-sitemap",
    "test:e2e": "playwright test",
    "test:e2e-open": "playwright test --ui"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.936.0",
    "@aws-sdk/lib-dynamodb": "^3.936.0",
    "@chakra-ui/react": "^3.29.0",
    "@emotion/react": "^11.14.0",
    "@next/third-parties": "^16.0.3",
    "@sentry/nextjs": "^10.26.0",
    "animate.css": "^4.1.1",
    "framer-motion": "11.11.9",
    "identity-obj-proxy": "^3.0.0",
    "loaders.css": "^0.1.2",
    "motion": "12.0.0-alpha.2",
    "next": "^16.0.3",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "sass": "^1.94.2",
    "sst": "3.17.21"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudfront": "^3.936.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.19.25",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "9.38.0",
    "eslint-config-next": "^16.0.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,md}": "prettier --write",
    "**/*.d.ts": "prettier --write"
  }
}
